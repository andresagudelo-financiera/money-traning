    <div
      class="w-6 h-10 rounded-full border-2 border-soft-gray/30 flex justify-center pt-2"
    >
      <div class="w-1 h-3 bg-rebellion-green rounded-full animate-pulse"></div>
    </div>
  </div>
</section>
